        <TextBlock x:Name="IPs" HorizontalAlignment="Left" Margin="410,40,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Initialized="IPs_Initialized" FontWeight="Bold"/>
