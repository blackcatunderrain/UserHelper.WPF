        <TextBlock x:Name="PWex" HorizontalAlignment="Left" Margin="410,130,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="21" Width="145" Initialized="PasswordEx_Initialized" FontWeight="Bold"/>
