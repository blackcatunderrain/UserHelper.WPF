        <TextBlock x:Name="NA" HorizontalAlignment="Left" Margin="410,160,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Initialized="NetworkStatus_Initialized" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,160,0,0" TextWrapping="Wrap" Text="Internet available:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,100,0,0" TextWrapping="Wrap" Text="Freespace:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,70,0,0" TextWrapping="Wrap" Text="Network Drives:" VerticalAlignment="Top"/>

    </Grid>
